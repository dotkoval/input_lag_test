
	MACRO	SETBORDER value
	IFDEF	DEVELOPMENT
		IF value == 0
		xor a
		ELSE
		ld a,value
		ENDIF
		out (#fe),a
	ELSE
		xor a
		out (#fe),a
	ENDIF
	ENDM

	MACRO	SETBANK value
		IF value == 0
		xor a
		ELSE
		ld a,value
		ENDIF
		ld bc,#7FFD
		out (c),a ; switching the page
	ENDM

	MACRO	READ_ANY_KEY
		xor a
		in a,(#fe)
		cpl
		and #1f
	ENDM
